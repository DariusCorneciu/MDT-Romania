@{
    int article = 1;
}


@foreach (MDT_Romania.Models.Category categ in ViewBag.PaginatedCategandCharges)
{
    article = 1;
    <h2>Title @categ.Id - @categ.Title</h2>
    <table class="table">
            <thead>
                <tr>
                    <th scope="col">Article</th>
                    <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Fine</th>
                <th scope="col">Jail</th>
                <th scope="col"> </th>
                </tr>
        </thead>
        <tbody>
           
            
    @foreach(MDT_Romania.Models.Crime crime in categ.Crimes)
    {           <tr>
                    <th scope="row">@article</th>
                    <td>@crime.Name</td>
                    <td>@crime.Description</td>
                    <td>@crime.Fine$</td>
                    @if (crime.Jail == 0)
                    {
                        <td>-</td>
                    }
                    else
                    {
                        <td colspan="2">@crime.Jail y</td>
                    }
                    
                </tr>

                article += 1;
            }
        </tbody>
    </table>
}



<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="@ViewBag.PaginationBaseUrl=@i">@(i)</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
