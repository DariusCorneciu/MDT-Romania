<a class="card col btn" href="/Civilians/Show/@Model.Id">
    <div class="content">
        <div class="back">
            <div class="back-content bg-body">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-file-earmark-person-fill" viewBox="0 0 16 16">
                    <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0m2 5.755V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-.245S4 12 8 12s5 1.755 5 1.755" />
                </svg>
                <strong>@Model.FirstName @Model.LastName</strong>
            </div>
        </div>
        <div class="front">

            <div class="img">
                <img class="circle" src=@Model.ImageSource() />
            </div>

            <div class="front-content">
                @if (Model.ActiveWarrant())
                {
                    <small class="badge">Active Warrant</small>
                }
                else{
                    <small class="badge badge2">Clear</small>
                    
                    }

                <div class="description">
                    <div class="title">
                        <p class="title">
                            <strong>Note</strong>
                        </p>

                    </div>
                    <p class="card-footer">@Model.Information</p>
                </div>
            </div>
        </div>
    </div>
</a>
