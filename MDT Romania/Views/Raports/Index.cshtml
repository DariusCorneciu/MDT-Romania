<form class="d-flex" method="GET">
    <input class="form-control me-2" type="search" placeholder="@ViewBag.SearchString" aria-label="Search" name="rapssearch">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

@if (ViewBag.NotFound)
{
    <div class="container d-flex justify-content-start gap-3 mt-3">
        <p>We didn't find the raport you are looking for. You can add this by pressing this button </p>
        <a tabindex="0" class="plusButton" href="/Raports/New">
            <svg class="plusIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30">
                <g mask="url(#mask0_21_345)">
                    <path d="M13.75 23.75V16.25H6.25V13.75H13.75V6.25H16.25V13.75H23.75V16.25H16.25V23.75H13.75Z"></path>
                </g>
            </svg>
        </a>
    </div>
}
<div class="container d-flex justify-content-center mt-5 gap-5 row row-cols-auto ">

    @if (ViewBag.Raports != null)
    {
        
        @foreach (MDT_Romania.Models.Raport raports in ViewBag.Raports)
        {

            <a class="notification d-flex justify-content-start bg-body-secondary" style="text-decoration: none; color: inherit;" href="/Raports/Show/@raports.Id">
                <div class="notiglow"></div>
                <div class="notiborderglow"></div>
                <div class="notititle">@raports.Name</div>
                <div class="notiauthor">@raports.Civilian.FirstName @raports.Civilian.LastName</div>
                @if (raports.User != null)
                {
                    <div class="notibody">Officer @raports.User.LastName @raports.User.FirstName</div>
                }
            </a>


            
        }
    }
</div>

